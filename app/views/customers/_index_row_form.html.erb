<td colspan="3">
  <%= form_for @customer, remote: true, html: { class: 'form-inline' } do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</td>
